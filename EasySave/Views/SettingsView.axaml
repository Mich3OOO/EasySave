<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:EasySave.ViewModels"
             x:Class="EasySave.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <Grid Margin="20" MaxWidth="500">

        <Border Background="#1E1E1E" 
                BorderBrush="#333333" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="25" 
                BoxShadow="0 4 10 0 #00000000">

            <StackPanel Spacing="15">

                <!-- Header with close button -->
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                        <TextBlock Text="⚙️" FontSize="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Paramètres" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="✕" Background="Transparent" Foreground="White" 
                            Command="{Binding CloseCommand}" FontSize="20" Padding="10,0" Cursor="Hand"/>
                </Grid>

                <StackPanel Spacing="5">
                    <TextBlock Text="Langue de l'application" Foreground="#AAAAAA" FontSize="12" FontWeight="SemiBold"/>
                    <ComboBox SelectedIndex="0" HorizontalAlignment="Stretch" Background="#252526" BorderBrush="#333333" Foreground="White" CornerRadius="6">
                        <ComboBoxItem>Français</ComboBoxItem>
                        <ComboBoxItem>English</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="5">
                    <TextBlock Text="Format des logs" Foreground="#AAAAAA" FontSize="12" FontWeight="SemiBold"/>
                    <ComboBox SelectedIndex="0" HorizontalAlignment="Stretch" Background="#252526" BorderBrush="#333333" Foreground="White" CornerRadius="6">
                        <ComboBoxItem>JSON</ComboBoxItem>
                        <ComboBoxItem>XML</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <Separator Height="1" Background="#333333" Margin="0,5"/>

                <StackPanel Spacing="5">
                    <TextBlock Text="Logiciel Métier (Pause la sauvegarde)" Foreground="#AAAAAA" FontSize="12" FontWeight="SemiBold"/>
                    <TextBox Watermark="Ex: Calculator.exe" Background="#252526" BorderBrush="#333333" Foreground="White" CornerRadius="6"/>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="⚠️" Foreground="#E53935" FontSize="12"/>
                        <TextBlock Text="Si détecté, les travaux seront mis en pause." Foreground="#E53935" FontSize="11" FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>

                <Separator Height="1" Background="#333333" Margin="0,5"/>

                <StackPanel Spacing="5">
                    <TextBlock Text="Extensions de fichiers prioritaires" Foreground="#AAAAAA" FontSize="12" FontWeight="SemiBold"/>
                    <TextBox Watermark="Ex: .docx, .pdf, .xlsx" Background="#252526" BorderBrush="#333333" Foreground="White" CornerRadius="6"/>
                    <TextBlock Text="Ces fichiers seront sauvegardés en premier." Foreground="#888888" FontSize="10" FontStyle="Italic"/>
                </StackPanel>

                <Separator Height="1" Background="#333333" Margin="0,5"/>

                <StackPanel Spacing="5">
                    <TextBlock Text="Taille maximale des fichiers (Mo)" Foreground="#AAAAAA" FontSize="12" FontWeight="SemiBold"/>
                    <NumericUpDown Minimum="1" Maximum="10000" Value="500" Background="#252526" BorderBrush="#333333" Foreground="White" CornerRadius="6"/>
                </StackPanel>

                <Button Content="Enregistrer" HorizontalAlignment="Center" Background="#00E676" Foreground="Black" FontWeight="Bold" CornerRadius="8" Padding="25,10" Margin="0,15,0,0" Cursor="Hand"/>
                
            </StackPanel>
            
        </Border>
        
    </Grid>
    
</UserControl>
