<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:EasySave.ViewModels"
             x:Class="EasySave.Views.JobsStateView"
             x:DataType="vm:JobsStateViewModel">

    <Border Background="{DynamicResource CardBackgroundBrush}" Padding="20">
        <Grid RowDefinitions="Auto, *, Auto">
            
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="{Binding T_saves_progression}" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding ActiveJobs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource ControlBackgroundBrush}" 
                                    BorderBrush="{DynamicResource BorderMediumBrush}" 
                                    BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,15">
        
                                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto">
            
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                                        <TextBlock Text="{Binding JobName}" Foreground="{DynamicResource TextPrimaryBrush}" 
                                                   FontSize="16" FontWeight="Bold"/>
                                        <Border IsVisible="{Binding IsFinished}" Background="{DynamicResource SuccessBrush}" 
                                                CornerRadius="4" Padding="6,2">
                                            <TextBlock Text="{Binding T_finished}" Foreground="{DynamicResource TextInvertedBrush}" FontSize="12"/>
                                        </Border>
                                    </StackPanel>

                                    <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Margin="0,0,15,0">
                                        <ProgressBar Value="{Binding Progress}" Height="12" CornerRadius="6" 
                                                     Foreground="{DynamicResource SuccessBrush}" 
                                                     Background="{DynamicResource BorderMediumBrush}"/>
                
                                        <TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat='{}{0:0}%'}" 
                                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="10,0,0,0"
                                                   VerticalAlignment="Center" Width="45" TextAlignment="Right"/>
                                    </Grid>

                                    <Border Grid.Row="2" Grid.Column="0"
                                            IsVisible="{Binding IsBusinessSoftwareRunning}"
                                            Background="{DynamicResource DangerBrush}"
                                            CornerRadius="4" Padding="8,4" Margin="0,10,15,0"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock Text="⚠️" FontSize="12"/>
                                            <TextBlock Text="{Binding BusinessSoftwareMessage}" 
                                                       Foreground="{DynamicResource TextInvertedBrush}" 
                                                       FontSize="12" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>

                                    <StackPanel Grid.Column="1" Grid.RowSpan="3" Orientation="Horizontal" Spacing="8" 
                                                VerticalAlignment="Center" IsVisible="{Binding !IsFinished}">
                
                                        <Button Command="{Binding TogglePauseCommand}" Background="Transparent" Padding="5" Cursor="Hand">
                                            <TextBlock Text="{Binding PauseIcon}" FontSize="16" Foreground="{DynamicResource SuccessBrush}"/>
                                        </Button>
                
                                        <Button Command="{Binding StopCommand}" Background="Transparent" Padding="5" Cursor="Hand">
                                            <TextBlock Text="❌" FontSize="14" Foreground="{DynamicResource DangerBrush}"/>
                                        </Button>
                                    </StackPanel>
            
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <!-- Bouton delete en bas à droite -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,20,0,0">
                <Button Content="{Binding T_delete}"
                        Classes="emoji"
                        Command="{Binding ClearHistoryCommand}"
                        Width="160"
                        Height="45"
                        CornerRadius="8"
                        Background="{DynamicResource DangerButtonBrush}"
                        Foreground="{DynamicResource TextInvertedBrush}"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="{DynamicResource DangerButtonHoverBrush}"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="{DynamicResource DangerButtonPressedBrush}"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>