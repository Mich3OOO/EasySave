                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
                <Border Background="#1E1E1E" 
                        CornerRadius="6" 
                        Padding="12,8" 
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center">
                    <TextBlock Text="{Binding JobName, StringFormat='Â« {0} Â» ?'}" 
