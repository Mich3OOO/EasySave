                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Title -->
            <TextBlock Grid.Row="1" 
                       Text="Confirmer la suppression" 
                       Foreground="White" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,15"/>

            <!-- Message -->
            <StackPanel Grid.Row="2" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,18">
                <TextBlock Text="ÃŠtes-vous sÃ»r de vouloir supprimer le travail" 
                           Foreground="#B4B4B4" 
