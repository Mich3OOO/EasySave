            <!-- Warning Icon -->
            <Border Grid.Row="0" 
                    Width="70" Height="70" 
                    Background="#1E1E1E"
                    CornerRadius="35" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,20">
