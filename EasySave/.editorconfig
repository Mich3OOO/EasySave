# Indique que c'est le fichier de configuration racine (ne cherche pas plus haut dans les dossiers)
root = true

# Règles pour tous les fichiers
[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Règles spécifiques pour les fichiers C#
[*.cs]
# Trier les 'using' (System en premier)
dotnet_sort_system_directives_first = true

# Style de code : utiliser 'var' quand le type est évident
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion

# Blocs de code (accolades)
csharp_new_line_before_open_brace = all
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true

# StyleCop : Exemple pour désactiver une règle spécifique de StyleCop si elle vous ennuie
# SA1633: The file header is missing or not located at the top of the file
dotnet_diagnostic.SA1633.severity = none